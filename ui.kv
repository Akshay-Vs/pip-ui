<HomeScreen>:
	side:side
    screen_orientation: 'landscape' if self.width > self.height else 'portrait'
	
	canvas.before:
	    Rectangle:
	        pos:self.pos
	        size:self.size
	        source: 'resources/images/bg.png'

    FloatLayout:
    	Button:
			id:side
            size_hint:0.274,1
			color:1,1,.1,.5
			background_color:(.878,1,1,.794)
			on_press:
				print("press")

		Button:
			id:logo
			color:0,0,0,1
			size_hint:0.274,.22
			pos_hint:{"center_x":.136,"center_y":.875}
			background_color:(1,1,1,.794)
			background_normal:'resources/images/python.png'
			background_down:'resources/images/python.png'
			on_press:
				root.effect()
				

